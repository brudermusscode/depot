<style>
  .product {
    border:1px solid rgba(0,0,0,.12);
    border-radius:10px;
    margin-bottom:1em;
    padding:1em;
    position:relative;
  }

  .product .image {
    float:left;
    height:200px;
    width:200px;
  }

  .product:last-of-type {
    margin:0;
  }
</style>
<div class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <div class="product">
          <div class="image" style="background:url(<%= image_path product.image_url %>) center no-repeat;background-size:cover;"></div>
          <div class="inr rt">
            <%= link_to product_path(id: product) do %>
              <div class="title"><%= product.title %></div>
            <% end %>
            <div class="desc"><%= sanitize(product.description) %></div>
            <div class="price mt24">
              <div class="lt actual">
                <%= number_to_currency(product.price) %>
              </div>
              <div class="rt" style="position:absolute;bottom:1.2em;right:1.2em;">
                <%=
                  button_to 'âž•',
                  line_items_path(
                    product_id: product,
                    locale: I18n.locale
                  ),
                  class: 'hellofresh red circled icon-only hover-shadow',
                  remote: true
                %>
              </div>
              <div class="cl"></div>
            </div>
          </div>
          <div class="cl"></div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
