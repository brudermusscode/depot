<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <div class="lt">
            <%= image_tag(product.image_url) %>
          </div>
          <div class="inr rt">
            <%= link_to product_path(id: product) do %>
              <div class="title"><%= product.title %></div>
            <% end %>
            <div class="desc"><%= sanitize(product.description) %></div>
            <div class="price mt24">
              <div class="lt actual">
                <%= number_to_currency(product.price) %>
              </div>
              <div class="rt" style="position:absolute;bottom:1.2em;right:1.2em;">
                <%=
                  button_to 'âž•',
                  line_items_path(
                    product_id: product,
                    locale: I18n.locale
                  ),
                  class: 'hellofresh red circled icon-only hover-shadow',
                  remote: true
                %>
              </div>
              <div class="cl"></div>
            </div>
          </div>
          <div class="cl"></div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
