<!DOCTYPE html>
<html>
  <head>
    <title>Depot</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <header class="main">
      <div class="inr">
        <div class="logo">
          <p class="actual">Bookshelf</p>
        </div>
        <h1>
          <%= @page_title %>
        </h1>
      </div>
    </header>
    <% if notice %>
      <div class="notifier">
        <div class="inr">
          <p><%= notice %></p>
        </div>
      </div>
    <% end %>
    <nav class="side_nav">
      <% if @cart %>
        <div id="cart" class="carts">
          <%= render @cart %>
        </div>
      <% end %>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/questions">Questions</a></li>
        <li><a href="/news">News</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
      <div style="color:white;font-weight:600;text-align:center;padding:24px 0;">
        <%= "#{Time.now.hour}" + ":" + "#{Time.now.min}" %>
      </div>
    </nav>
    <div class="content">
      <main class='<%= controller.controller_name %>'>
        <%= yield %>
      </main>
    </div>
  </body>
</html>
