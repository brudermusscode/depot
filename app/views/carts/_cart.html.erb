<article>
  <h2><%= t('.title') %></h2>
  <table>
    <%= render(cart.line_items) %>
    <tfoot>
      <tr>
        <th colspan="2">Total: <%= number_to_currency(cart.total_price) %></th>
      </tr>
    </tfoot>
  </table>
  <div class="disfl fldirrow flCenter" style="gap:1em;margin-top:2em;">
    <%=
      button_to t('.empty'), cart,
      {
        method: :delete,
        data: { confirm: 'Are you sure?' },
        class: 'hellofresh rd4 hover-shadow red small mt24 mr12',
        remote: true
      }
    %>
    <%= button_to t('.checkout'), new_order_path, method: :get, class: "hellofresh rd4 hover-shadow green small mt24 mr12" %>
  </div>
</article>
