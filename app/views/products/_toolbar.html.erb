<div class="lt">
  <%= link_to products_path, { class: 'hellofresh clean icon-only clean circled hover-shadow rd6 ml4',
  style: '' } do %>
    <span class="material-icons md24" style="line-height:2em;">arrow_back</span>
  <% end %>
</div>
<div class="rt disfl mb24" style="flex-direction:row-reverse;gap:.4em;">
  <% unless params[:action] == 'new' %>
    <%= button_to "Delete", @product, { method: :delete, class: 'hellofresh red big hover-shadow rd6' } %>
    <% unless params[:action] == 'edit' %>
      <%= link_to "Edit", edit_product_path(@product), { class: 'hellofresh clean big hover-shadow rd6' } %>
    <% end %>
  <% end %>
</div>
<div class="cl"></div>
