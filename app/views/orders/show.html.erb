<%= render @order %>
<% @order.products.each do |product| %>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image_url, style: 'height:6em;border:1px solid rgba(0,0,0,.08);border-radius:10px;margin-right:8px;' %>
  <% end %>
<% end %>
<div>
  <%= link_to "Edit this order", edit_order_path(@order) %> |
  <%= link_to "Back to orders", orders_path %>
  <%= button_to "Destroy this order", @order, method: :delete %>
</div>
