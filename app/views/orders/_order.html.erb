<div id="<%= dom_id order %>" class="borderBox padded mb12 rd6">
  <div class="mb24">
    <% if order.user_id %>
      <p style=""><strong><%= get_user(order.user_id).name %></strong></p>
    <% end %>
    <p><%= order.name %></p>
    <div class="mt12 mb12">
      <p><strong>Address</strong></p>
      <p><%= order.address %></p>
      <p><%= order.postcode %> <%= order.city %></p>
    </div>
    <p>
      <strong>Email:</strong>
      <%= order.email %>
    </p>
    <p>
      <strong>Pay type:</strong>
      <%= order.pay_type %>
    </p>
  </div>
  <div class="images mt12 disfl fldirrow flCenter">
    <% order.products.each do |product| %>
      <%= link_to product_path(product) do %>
        <%= image_tag product.image_url, style: 'height:6em;border:1px solid rgba(0,0,0,.08);border-radius:10px;margin-right:8px;' %>
      <% end %>
    <% end %>
  </div>
  <div class="actions mt12 rt disfl fldirrow" style="gap:.4em;">
    <%= link_to "Show", order, class: 'hellofresh blue small dark hover-shadow' %>
    <%= link_to "Edit", edit_order_path(order), class: 'hellofresh blue small dark hover-shadow' %>
    <%= button_to "Cancel", order, method: :delete, class: 'hellofresh red small dark hover-shadow' %>
  </div>
  <div class="cl"></div>
</div>
